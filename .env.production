# Production Environment Configuration
NODE_ENV=production

# Server Configuration
SERVER_HOST=xiaozhi.production.com
SERVER_PORT=8080

# Manager API Configuration
MANAGER_API_HOST=xiaozhi.production.com
MANAGER_API_PORT=8002
SPRING_PROFILES_ACTIVE=prod

# Manager Web Configuration
MANAGER_WEB_HOST=xiaozhi.production.com
MANAGER_WEB_PORT=8080
VUE_APP_API_BASE_URL=https://xiaozhi.production.com/toy
VUE_APP_TITLE=Xiaozhi Manager
VUE_APP_USE_CDN=true
VUE_APP_PUBLIC_PATH=/

# MQTT Gateway Configuration
MQTT_HOST=xiaozhi.production.com
MQTT_PORT=1883
HTTP_PORT=8884
UDP_PORT=8885
DEBUG=

# Database Configuration
DB_HOST=prod-db.xiaozhi.local
DB_PORT=3306
DB_NAME=xiaozhi_production
DB_USERNAME=xiaozhi_prod
DB_PASSWORD=${DB_PASSWORD}

# Redis Configuration
REDIS_HOST=prod-redis.xiaozhi.local
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DATABASE=0

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_PATH=/var/log/xiaozhi

# PM2 Configuration
PM2_INSTANCES=2
PM2_MAX_MEMORY=4G
PM2_LOG_DATE_FORMAT=YYYY-MM-DD HH:mm:ss Z

# Security Configuration
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# External Services
ALIYUN_ACCESS_KEY=${ALIYUN_ACCESS_KEY}
ALIYUN_ACCESS_SECRET=${ALIYUN_ACCESS_SECRET}

# Deployment Configuration
DEPLOY_PATH=/opt/xiaozhi-esp32-server
BACKUP_PATH=/opt/backups/xiaozhi-esp32-server