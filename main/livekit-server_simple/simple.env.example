# Simplified .env template for basic LiveKit agent
# Copy this file to simple.env and configure your settings

# LiveKit Configuration
LIVEKIT_URL=ws://localhost:7890
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# AI Provider Configuration
# Get your Groq API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# AI Model Configuration
LLM_MODEL=llama-3.1-8b-instant
STT_MODEL=whisper-large-v3-turbo
STT_LANGUAGE=en
TTS_MODEL=playai-tts
TTS_VOICE=Diana-PlayAI

# Agent Settings
PREEMPTIVE_GENERATION=false
NOISE_CANCELLATION=false

# TTS Configuration (using Groq PlayAI)
TTS_PROVIDER=groq

# STT Configuration for Kids' Voice (Buffered Audio Mode)
# Options: assemblyai, deepgram, groq
STT_PROVIDER=assemblyai

# AssemblyAI API Key (Best for kids' voices - 85-92% accuracy)
# Get your API key from: https://www.assemblyai.com/
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Deepgram API Key (Alternative - fast and accurate)
# Get your API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# AWS Configuration (for comparison testing)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1