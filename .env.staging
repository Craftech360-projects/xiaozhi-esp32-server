# Staging Environment Configuration
NODE_ENV=staging

# Server Configuration
SERVER_HOST=staging.xiaozhi.local
SERVER_PORT=8080

# Manager API Configuration
MANAGER_API_HOST=staging.xiaozhi.local
MANAGER_API_PORT=8002
SPRING_PROFILES_ACTIVE=staging

# Manager Web Configuration
MANAGER_WEB_HOST=staging.xiaozhi.local
MANAGER_WEB_PORT=8080
VUE_APP_API_BASE_URL=http://staging.xiaozhi.local:8002/toy
VUE_APP_TITLE=Xiaozhi Manager (Staging)
VUE_APP_USE_CDN=false
VUE_APP_PUBLIC_PATH=/

# MQTT Gateway Configuration
MQTT_HOST=staging.xiaozhi.local
MQTT_PORT=1883
HTTP_PORT=8884
UDP_PORT=8885
DEBUG=

# Database Configuration
DB_HOST=staging-db.xiaozhi.local
DB_PORT=3306
DB_NAME=xiaozhi_staging
DB_USERNAME=xiaozhi_staging
DB_PASSWORD=${DB_PASSWORD}

# Redis Configuration
REDIS_HOST=staging-redis.xiaozhi.local
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DATABASE=1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/xiaozhi

# PM2 Configuration
PM2_INSTANCES=1
PM2_MAX_MEMORY=2G
PM2_LOG_DATE_FORMAT=YYYY-MM-DD HH:mm:ss Z

# Security Configuration
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# External Services
ALIYUN_ACCESS_KEY=${ALIYUN_ACCESS_KEY}
ALIYUN_ACCESS_SECRET=${ALIYUN_ACCESS_SECRET}

# Deployment Configuration
DEPLOY_PATH=/opt/xiaozhi-esp32-server
BACKUP_PATH=/opt/backups/xiaozhi-esp32-server