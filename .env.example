# Xiaozhi ESP32 Server Environment Configuration
# Copy this file to .env.dev, .env.staging, or .env.production and configure values

# Environment
NODE_ENV=development

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080

# Manager API Configuration
MANAGER_API_HOST=localhost
MANAGER_API_PORT=8002
SPRING_PROFILES_ACTIVE=dev

# Manager Web Configuration
MANAGER_WEB_HOST=localhost
MANAGER_WEB_PORT=8080
VUE_APP_API_BASE_URL=http://localhost:8002/toy
VUE_APP_TITLE=Xiaozhi Manager
VUE_APP_USE_CDN=false
VUE_APP_PUBLIC_PATH=/

# MQTT Gateway Configuration
MQTT_HOST=localhost
MQTT_PORT=1883
HTTP_PORT=8884
UDP_PORT=8885
DEBUG=

# Database Configuration (for Manager API)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=xiaozhi
DB_USERNAME=root
DB_PASSWORD=password

# Redis Configuration (for Manager API)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/xiaozhi

# PM2 Configuration
PM2_INSTANCES=1
PM2_MAX_MEMORY=1G
PM2_LOG_DATE_FORMAT=YYYY-MM-DD HH:mm:ss Z

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External Services
ALIYUN_ACCESS_KEY=your_aliyun_access_key
ALIYUN_ACCESS_SECRET=your_aliyun_access_secret

# Deployment Configuration
DEPLOY_PATH=/opt/xiaozhi-esp32-server
BACKUP_PATH=/opt/backups/xiaozhi-esp32-server